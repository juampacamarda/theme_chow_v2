{
    "key": "group_bloques_productos",
    "title": "Bloques de Productos",
    "fields": [
        {
            "key": "field_bloques_productos_repeater",
            "label": "Bloques de Productos",
            "name": "bloques_productos",
            "type": "repeater",
            "instructions": "Crea múltiples bloques de productos. Cada bloque puede mostrar productos de forma diferente según la configuración.",
            "layout": "table",
            "button_label": "Agregar Bloque",
            "sub_fields": [
                {
                    "key": "field_bloques_titulo",
                    "label": "Título del Bloque",
                    "name": "titulo",
                    "type": "text",
                    "instructions": "Título que aparecerá en la sección de productos"
                },
                {
                    "key": "field_bloques_descripcion",
                    "label": "Descripción",
                    "name": "descripcion",
                    "type": "textarea",
                    "instructions": "Descripción opcional para el bloque de productos",
                    "rows": 4
                },
                {
                    "key": "field_bloques_tipo",
                    "label": "Tipo de Productos",
                    "name": "tipo",
                    "type": "select",
                    "instructions": "Selecciona cómo se mostrarán los productos",
                    "required": 1,
                    "choices": {
                        "ultimos": "Últimos Productos",
                        "destacados": "Productos Destacados",
                        "ofertas": "Productos en Oferta",
                        "categoria": "Por Categoría"
                    },
                    "default_value": "ultimos"
                },
                {
                    "key": "field_bloques_categoria",
                    "label": "Categoría",
                    "name": "categoria",
                    "type": "taxonomy",
                    "instructions": "Selecciona la categoría de productos a mostrar",
                    "conditional_logic": [
                        [{"field": "field_bloques_tipo", "operator": "==", "value": "categoria"}]
                    ],
                    "taxonomy": "product_cat",
                    "field_type": "select",
                    "return_format": "id"
                },
                {
                    "key": "field_bloques_cantidad",
                    "label": "Cantidad de Productos",
                    "name": "cantidad",
                    "type": "number",
                    "instructions": "Número de productos a mostrar",
                    "default_value": 8,
                    "min": 1,
                    "max": 50
                },
                {
                    "key": "field_bloques_layout",
                    "label": "Layout",
                    "name": "layout",
                    "type": "select",
                    "instructions": "Elige cómo mostrar los productos",
                    "choices": {
                        "columnas": "Grid de Columnas",
                        "carousel": "Carrusel (Owl Carousel)"
                    },
                    "default_value": "columnas"
                },
                {
                    "key": "field_bloques_columnas",
                    "label": "Número de Columnas",
                    "name": "columnas",
                    "type": "select",
                    "instructions": "Cuántas columnas por fila",
                    "conditional_logic": [
                        [{"field": "field_bloques_layout", "operator": "==", "value": "columnas"}]
                    ],
                    "choices": {
                        "col-lg-2": "6 Columnas",
                        "col-lg-3": "4 Columnas",
                        "col-lg-4": "3 Columnas",
                        "col-lg-6": "2 Columnas"
                    },
                    "default_value": "col-lg-3"
                }
            ]
        }
    ],
    "location": [
        [
            {
                "param": "options_page",
                "operator": "==",
                "value": "Bloques de Productos"
            }
        ]
    ],
    "active": true
}